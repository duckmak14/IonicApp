        top.winsetup("Thay đổi giá", screen.width * 0.8, screen.height * 0.12, true);
    }
    function change_success() {
        top.winclose();
        top.$("#grid").data("kendoGrid").dataSource.read();
        window.parent.show_stack_bottom_right('success', 'Đổi giá', 'Đổi thành công.');

    }
    function exitWindow() {
        top.$("#window").data("kendoWindow").close();
    }
</script>


