                    columns.Bound("").ClientTemplate("<input name='checkedNodes' type='checkbox' class='k-checkbox' value='#=ID#' onclick='childNodeClick(this)'/>")
                        .HtmlAttributes(new { style = "text-align:center;" })
                        .Filterable(false)
                        .HeaderTemplate("<input type='checkbox' class='checked_all' onclick='checkAll(event)' id='chkAll'/>").Width(70);
                    //columns.Bound(p => p.ID).Title(Resources.Common.ID);
                    columns.Bound(p => p.Route.RouteCode).Title(WebModels.AccountResources.RouteCode).HtmlAttributes(new { style = "text-align:center;" }).Width(150);
                    columns.Bound(p => p.Route.StartLocation.LocationName).Title(WebModels.AccountResources.StartLocation).Width(200);
                    columns.Bound(p => p.Route.EndLocation.LocationName).Title(WebModels.AccountResources.EndLocation).Width(200);
                    columns.Bound(p => p.Weight.WeightName).Title(WebModels.AccountResources.WeightName).HtmlAttributes(new { style = "text-align:center;" }).Width(150);
                    columns.Bound(p => p.Price).Title(WebModels.AccountResources.Price).Format("{0:N0}+ đ").HtmlAttributes(new { style = "text-align:right;" }).Width(150);
                    columns.Bound(p => p.SourcePartner.PartnerName).Title(WebModels.AccountResources.SourcePartner).Width(170);
                    columns.Bound(p => p.DestinationPartner.PartnerName).Title(WebModels.AccountResources.DestinationPartner).Width(170);
                    columns.Bound(p => p.Note).Title(WebModels.AccountResources.Note).Width(200);
