<script type="text/javascript">
    var rowselected = [];
    var isCheckedAll = false;
    //function change_handler(e) {

    //    var id = this.dataItem(this.select()[0]).ID;
    //    console.log(id);
    //    if (rowselected.indexOf(id) !== -1) {
